<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="4dp">

    <ImageView
        android:id="@+id/identity_num_listview_main_listview_item_avatar"
        android:background="@mipmap/ic_launcher"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_gravity="center_horizontal"
        android:layout_above="@+id/linearLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/identity_num_listview_main_listview_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="爷，今天心情好！"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:id="@+id/linearLayout2">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="上一步"
            android:textSize="20sp"
            android:id="@+id/identity_num_listview_main_listview_item_btn_left"
            />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="拍照"
            android:textSize="20sp"
            android:id="@+id/identity_num_listview_main_listview_item_btn_mid"
            />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="下一步"
            android:textSize="20sp"
            android:id="@+id/identity_num_listview_main_listview_item_btn_right"
            />
    </LinearLayout>


</RelativeLayout>
